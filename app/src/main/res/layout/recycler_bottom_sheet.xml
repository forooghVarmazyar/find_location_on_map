<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_rcv_bottom_sheet"
        style="@style/UtilTextView.ListRecycler.Description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_8_dp"
        android:layout_toLeftOf="@id/ic_sample"
        android:text="" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ic_sample"
        android:layout_width="@dimen/view_40_dp"
        android:layout_height="@dimen/view_32_dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_4_dp"
        android:background="@drawable/ic_sample" />


</RelativeLayout>